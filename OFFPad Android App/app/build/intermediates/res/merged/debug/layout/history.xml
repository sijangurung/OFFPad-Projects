<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All Transactions"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textColor="@color/offpadBlue" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView7"
        android:id="@+id/linearLayout"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Id:"
            android:id="@+id/textView8"
            android:layout_marginLeft="10sp" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date:"
            android:id="@+id/textView9" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sent To"
            android:id="@+id/textView10" />

        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView11"
            android:text="Amount" />

        <TextView
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Status"
            android:id="@+id/textView12" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:id="@+id/imageView3"
        android:background="#dadada"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="5sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="10sp"
        android:id="@+id/listHistory"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="10sp" />

    <ImageButton
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:id="@+id/btnBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ico_back"
        android:layout_margin="10sp"
        android:onClick="Back" />

</RelativeLayout><!-- From: file:/Volumes/Work%20and%20Stuffs/Dropbox/Master%20Thesis%20Files/Project%20by%20Sijan/OFFPad%20Android%20App/app/src/main/res/layout/history.xml -->